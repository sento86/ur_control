<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="ft_sensor_robotiq">

    <!-- Include all available models -->
    <xacro:include filename="$(find ur_control)/models/ft_sensor/models.urdf.xacro"/>
    <!--<xacro:include filename="$(find ur_control)/models/ft_sensor/ft_sensor.gazebo.xacro"/>-->
    <xacro:include filename="$(find ur_control)/models/ft_sensor/ft_sensor_robotiq.gazebo.xacro"/>

    <!-- Base model for all sensor to have common frame names -->
    <xacro:macro name="ft_sensor_ft300" params="parent name type *origin">

    <joint name="${name}_base_joint" type="fixed">
	<xacro:insert_block name="origin"/>
	<parent link="${parent}"/>
	<child link="${name}_ft_base"/>
    </joint>

    <link name="${name}_ft_base">
	<xacro:insert_block name="ft300"/>
    </link>

    <joint name="${name}_measure_joint" type="revolute">
	<xacro:insert_block name="ft300_measure_frame"/>
	<parent link="${name}_ft_base"/>
	<child link="${name}_ft_measure"/>
	<limit lower="0" upper="0" effort="20000" velocity="20000"/>
	<axis xyz="0 0 1" />
    </joint>

    <link name="${name}_ft_measure">
        <xacro:insert_block name="ft300_platform"/>
    </link>

    <transmission name="${name}_tran_ft">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${name}_measure_joint">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="${name}_motor_ft">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <xacro:ft_sensor_gazebo name="${name}" parent="${parent}" type="${type}"/>

    </xacro:macro>

</robot>
